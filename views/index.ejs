<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="galery_3d.css">
  <link rel="stylesheet" href="./css/bootstrap.css">
  <link rel="stylesheet" href="./css/jquery-ui.css">
</head>

<body>
  <div id="top_area" class="container-fluid top-area">
    <div class="row top-area">
      <div class="col-auto">
        <h2>
          <%= title %>
        </h2>
        <form class="mt-3">
          <input class="form-control" type="file" id="formFile" accept=".stl, .obj, .ply">
        </form>
        <div class="row mt-2">
          <div class="col first-col">
            Show Properties
          </div>
          <div class="col-auto">
            <input class="form-check-input properties-value value-boolean" type="checkbox" value=""
              id="object_properties_button">
          </div>
        </div>
        <div id="object_properties">
        </div>
        <%- include ('partials/_button_field.ejs', {key: 'reset', name: 'Reset Objekt/Kamera'}); %>
        <%- include ('partials/_numeric_field.ejs', {object: 'camera', keys: ['fov'], name: 'Kamera FOV'}); %>
        <%- include ('partials/_numeric_field.ejs', {object: 'camera', keys: ['zoom'], name: 'Zoom'}); %>
        <%- include ('partials/_vector_field.ejs', {object: 'camera', keys: ['position'], name: 'Position'}); %>
      </div>
      <div class="col" id="canvas_parent"></div>
    </div>
    <script src="./dist/client.bundle.js"></script>
</body>

</html>